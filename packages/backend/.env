# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database Configuration - NOVO BANCO ISOLADO
MONGODB_URI=mongodb://localhost:27017/app_lite_db
MONGODB_DB_NAME=app_lite_db

# GridFS Configuration - UPLOAD DE MÍDIAS
GRIDFS_BUCKET_NAME=app_lite_uploads
GRIDFS_CHUNK_SIZE=261120

# JWT Configuration - AUTENTICAÇÃO MOBILE
JWT_SECRET=app_lite_jwt_secret_key_2024_very_secure_random_string
JWT_REFRESH_SECRET=app_lite_refresh_jwt_secret_key_2024_very_secure_random_string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration - MOBILE + WEB
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173
CORS_CREDENTIALS=true

# Rate Limiting - SEGURANÇA
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration - MONGODB GRIDFS
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4
MAX_FILES_PER_UPLOAD=5

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development
DEBUG=super-app:*

# DB Boot Behavior
SKIP_DB=false